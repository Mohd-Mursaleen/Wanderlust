<% layout('/layout/boilerplate.ejs') -%>

<style>
  /* Reset styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  .home-heading {
    font-weight: 800;
    font-size: 5rem !important;

    text-transform: uppercase;
    letter-spacing: 2px;
    color: #dc3545;
  }
  /* Body styles */

  .logo {
    font-size: 24px;
    font-weight: bold;
    color: #333; /* Dark text color */
  }

  /* Hero section styles */
  .hero {
    background-image: url("https://images.pexels.com/photos/106399/pexels-photo-106399.jpeg"); /* Add your hero image */
    background-size: cover;
    background-position: center;
    height: 600px; /* Adjust height as needed */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .hero-content {
    color: #fff; /* White text color */
  }

  .hero-content h2 {
    font-size: 36px;
    margin-bottom: 20px;
  }

  .hero-content p {
    font-size: 18px;
    margin-bottom: 30px;
  }

  .btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #dc3545; /* Red button color */
    color: #fff; /* White text color */
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #c82333; /* Darker red on hover */
  }

  /* Featured hotels section styles */
  .featured-hotels {
    padding: 50px 0;
    text-align: center;
  }

  .featured-hotels h2 {
    font-size: 32px;
    margin-bottom: 30px;
  }

  .hotel-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  /* Footer styles */
  .footer {
    background-color: #333; /* Dark background */
    color: #fff; /* White text color */
    padding: 20px 0;
    text-align: center;
  }

  .footer p {
    font-size: 14px;
  }
</style>

<!-- Hero Section -->
<section class="hero">
  <div class="hero-content">
    <h2 class="home-heading">Welcome to Wanderlust</h2>
    <p>Find your dream hotel and book your next adventure with us!</p>
    <a href="/listings" class="btn">Explore Now</a>
  </div>
</section>

<!-- Featured Hotels Section -->
<section class="featured-hotels">
  <h2>Featured Hotels</h2>
  <div class="hotel-list">
    <!-- Hotel cards go here -->
  </div>
</section>
