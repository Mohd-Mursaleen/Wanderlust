<% layout('/layout/boilerplate.ejs') -%>

<style>
  /* Reset styles */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Body styles */
  .logo {
    font-size: 24px;
    font-weight: bold;
    color: #333; /* Dark text color */
  }

  /* Hero section styles */
  .hero {
    position: relative; /* Position for overlay */
    height: 600px; /* Adjust height as needed */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    margin-top: 2rem;
  }

  /* Background image */
  .hero::before {
    content: "";
    background-image: url("https://images.pexels.com/photos/106399/pexels-photo-106399.jpeg"); /* Add your hero image */
    background-size: cover;
    background-position: center;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    filter: blur(5px); /* Apply blur effect */
    z-index: -1; /* Ensure it's behind the content */
  }

  /* Content */
  .hero-content {
    color: #fff; /* White text color */
    position: relative; /* Ensure content is on top */
    z-index: 1; /* Make sure content appears on top of the overlay */
  }
  .hero-content h2 {
    font-size: 36px;
    margin-bottom: 20px;
  }

  .hero-content p {
    font-size: 18px;
    margin-bottom: 30px;
  }

  .btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #dc3545; /* Red button color */
    color: #fff; /* White text color */
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #c82333; /* Darker red on hover */
  }

  /* Featured hotels section styles */
  .featured-hotels {
    padding: 50px 0;
    text-align: center;
  }

  .featured-hotels h2 {
    font-size: 32px;
    margin-bottom: 30px;
  }
  .hotel-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly; /* Add space between cards */
    gap: 20px; /* Add space between cards */
  }

  @media (max-width: 768px) {
    .hotel-list {
      justify-content: center; /* Center cards on small screens */
    }
  }

  .hotel-card {
    width: calc(33.33% - 20px); /* Maximum of three cards per row */
    margin-bottom: 20px; /* Add space below each card */
  }

  @media (max-width: 768px) {
    .hotel-card {
      width: calc(100% - 20px); /* One card per row on small screens */
    }
  }

  .hotel-card {
    object-fit: cover;
  }

  /* Footer styles */

  .hotel-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    padding: 20px;
  }

  /* Card styles */
  /* Add this to your existing CSS */
  .hotel-card {
    position: relative;
    overflow: hidden;
  }

  .hotel-card img {
    transition: transform 0.3s ease;
  }

  .hotel-card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    padding: 10px;
    color: #fff;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .hotel-card:hover .hotel-card-content {
    transform: translateY(0);
  }

  .hotel-card:hover img {
    transform: scale(1.1);
  }

  .hotel-card {
    width: 300px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .hotel-card:hover {
    transform: translateY(-5px);
  }

  .hotel-card img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
  }

  .hotel-card-content {
    padding: 20px;
  }

  .hotel-card h3 {
    margin-bottom: 10px;
    font-size: 1.5rem;
    color: #fff;
  }
  .newsletter {
    text-align: center;
    padding: 50px 0;
  }

  .newsletter h2 {
    font-size: 32px;
    margin-bottom: 20px;
  }

  .newsletter form {
    max-width: 400px;
    margin: 0 auto;
  }

  .newsletter input[type="email"] {
    width: 100%;
    padding: 15px;
    border: 2px solid #ccc;
    border-radius: 5px;
    margin-bottom: 20px;
    font-size: 16px;
  }

  .newsletter button {
    display: block;
    width: 100%;
    padding: 15px;
    background-color: #dc3545;
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .newsletter button:hover {
    background-color: #c82333;
  }
</style>

<!-- Hero Section -->
<section class="hero">
  <div class="hero-content">
    <h2 class="home-heading">Welcome to Wanderlust</h2>
    <p>Find your dream hotel and book your next adventure with us!</p>
    <a href="/listings" class="btn">Explore Now</a>
  </div>
</section>

<!-- Featured Hotels Section -->
<section class="featured-hotels">
  <div class="container">
    <h2>Featured Hotels</h2>
    <div class="hotel-list">
      <% for(listing of allListings){ let i = 0;%>
      <a href="/listings/<%= listing._id %>" class="card-a">
        <div class="hotel-card">
          <img src="<%= listing.image.url %>" alt="Hotel Image" />
          <div class="hotel-card-content">
            <h3><%= listing.title %></h3>
            <p>&#8377;<%= listing.price.toLocaleString("en-In") %></p>
          </div>
        </div>
      </a>
      <% i++; if(i>6){break;} %> <% } %>
    </div>
  </div>
</section>
<hr />

<section class="newsletter">
  <div class="container">
    <h2>Subscribe to Our Newsletter</h2>
    <form action="/listings">
      <input
        type="email"
        name="email"
        placeholder="Enter your email"
        required
      />
      <button type="submit" class="btn">Subscribe</button>
    </form>
  </div>
</section>
