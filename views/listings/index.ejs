<% layout('/layout/boilerplate.ejs') -%>
  


<div class="filters">
  <div class="filter-container ">
    <div class="filter ">
      <div><a href="/listings/search/mountain"><i class="fa-solid fa-mountain"></i></a></div>
      <p>Mountains</p>
    </div>
    <div class="filter ">
      <div><a href="/listings/search/beach"><i class="fa-solid fa-umbrella-beach"></i></a></div>
      <p>Beach</p>
    </div>
    <div class="filter ">
      <div><a href="/listings/search/iconic-cities"><i class="fa-solid fa-city"></i></a></div>
      <p>Iconic cities</p>
    </div>
    <div class="filter ">
      <div><a href="/listings/search/swimming-pools"><i class="fa-solid fa-person-swimming"></i></a></div>
      <p>Swimming pools</p>
    </div>
    <div class="filter ">
      <div><a href="/listings/search/countryside"><i class="fa-solid fa-tree"></i></a></div>
      <p>Countryside</p>
    </div>
    <div class="filter ">
      <div><a href="/listings/search/camping"><i class="fa-solid fa-tent"></i></a></div>
      <p>Camping</p>
    </div>
    <div class="filter ">
      <div><a href="/listings/search/farms"><i class="fa-solid fa-wheat-awn"></i></a></div>
      <p>Farms</p>
    </div>
    <div class="filter ">
      <div><a href="/listings/search/snow"><i class="fa-regular fa-snowflake"></i></a></i></div>
      <p>Snow</p>
    </div>
   
  </div>

  <div class="taxToggle">
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Taxes</label>
    </div>
  </div>
</div>

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 g-3">

  <!-- Listing cards will be dynamically generated here -->
  <% for (listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="card-a">
      <div class="card col" style="width: 26rem;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
        <div class="card-img-overlay">
          <!-- Additional overlay content can be added here -->
        </div>
        <div class="card-body">
          <p class="card-text">
            <h6><strong><%= listing.title %></strong></h6>
            &#8377;<%= listing.price.toLocaleString("en-In") %> / night
            <i class="taxInfo">+ &#8377;<%= listing.price * 0.18 %> GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("taxInfo");
    for (info of taxInfo) {
      if (info.style.display == "inline") {
        info.style.display = "none";
      } else {
        info.style.display = "inline";
      }
    }
  });
</script>
